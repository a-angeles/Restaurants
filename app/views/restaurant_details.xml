<Alloy>
	<View id="Wrapper" name="Text">
		<Require type="widget" src="com.mcongrove.navigationBar" id="NavigationBar" image="data/logo.png" />
		<View backgroundColor="#282828" layout="vertical">

			<View height="50%" layout="horizontal">
				<View height="100%" width="50%" backgroundColor="#FFFFFF">
					<ImageView id="photoText" image="/images/default_restaurant.png" />
				</View>
				<View height="100%" width="50%" backgroundColor="#FFB03B">

					<Label id="heading" />
					<Label id="text" />

				</View>
			</View>
			<View height="50%" layout="absolute">

				<TableView id="options">

					<TableViewSection headerTitle="Hours">
						<TableViewRow id="hours" title="Hours">
							<Label id="hoursText" />
						</TableViewRow>
					</TableViewSection>
					<TableViewSection headerTitle="Menu">
						<TableViewRow id="menu" title="Menu" >
							<Label id="menuText" />
						</TableViewRow>
					</TableViewSection>
					<TableViewSection headerTitle="About">
						<TableViewRow id="about "title="About">
							<Label id="aboutText" />
						</TableViewRow>
					</TableViewSection>

				</TableView>
			</View>
		</View>

	</View>
</Alloy>